{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2015", "DOM", "ES2016"],
    "resolveJsonModule": true
  }
}
